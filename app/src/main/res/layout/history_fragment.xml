<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/getButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/displayTextView"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:text="@string/app_name"
        android:textIsSelectable="true"
        android:layout_below="@+id/imageViewHistory"
        android:layout_alignStart="@+id/imageViewHistory"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/imageViewHistory"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:gravity="center"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:layout_below="@+id/getButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />


</RelativeLayout>